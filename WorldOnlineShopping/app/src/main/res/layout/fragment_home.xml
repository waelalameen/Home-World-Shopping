<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:padding="10dp"
            tools:context="com.wael.alameen.worldonlineshopping.Home">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:id="@+id/linear_mar">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/marquee"
                    android:lines="1"
                    android:ellipsize="marquee"
                    android:textSize="15sp"
                    android:scrollHorizontally="true"
                    android:fadingEdge="horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/auto_slide"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linear_mar">

            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_below="@+id/auto_slide">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact"
                    android:layout_weight="2"
                    android:src="@drawable/ic_ring_volume_black_24dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/share"
                    android:layout_weight="2"
                    android:src="@drawable/ic_share_black_24dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/info"
                    android:layout_weight="2"
                    android:src="@drawable/ic_live_help_black_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear2"
                android:background="@color/white"
                android:layout_marginTop="-18dp"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_below="@+id/linear">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text1"
                    android:text="اتصل بنا"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text2"
                    android:text="شارك التطبيق"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text3"
                    android:text="حول عالم التسوق"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_weight="2"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/image_one"
                android:background="@drawable/images_border"
                android:src="@drawable/app_icon"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linear2"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/image_two"
                android:background="@drawable/images_border"
                android:src="@drawable/app_icon"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/image_one"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/image_three"
                android:background="@drawable/images_border"
                android:src="@drawable/app_icon"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/image_two"/>

        </RelativeLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>